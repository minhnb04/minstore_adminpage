<div id="form_add_product" class="w-100 bg-gray-100 opacity-25 position-absolute pt-4 pb-4 top-0 start-0 d-none">
    <div class="col-xl-4 col-lg-5 col-md-7 mx-auto w-50">
        <div class="card z-index-0">
            <div class="card-header text-center pt-4">
                <h5>Add Product</h5>
            </div>
            <div class="card-body">
                <form role="form text-left">
                    <div class="mb-3">
                        <input type="text" class="form-control" placeholder="Product name" aria-label="Product name" aria-describedby="productname-addon">
                    </div>
                    <div class="mb-3">
                        <input type="text" class="form-control" placeholder="Brand" aria-label="Brand" aria-describedby="brand-addon">
                    </div>
                    <div class="mb-3">
                        <input type="text" class="form-control" placeholder="Classify" aria-label="Classify" aria-describedby="classify-addon">
                    </div>

                    <div class="mb-3">
                        <input type="text" class="form-control" placeholder="Specifications" aria-label="Specifications" aria-describedby="specifications-addon">
                    </div>
                    <div class="mb-3">
                        <select class="form-select pe-5" aria-label="Default select example">
                            <option selected>Select color</option>
                            <option value="white">white</option>
                            <option value="black">black</option>
                            <option value="gold">gold</option>
                            <option value="silver">silver</option>
                            <option value="gray">gray</option>
                            <option value="blue">blue</option>
                        </select>
                    </div>
                    <div class="mb-3 d-flex justify-content-between">
                        <div class="mb-3">
                            <input type="number" class="form-control" placeholder="Quantity" aria-label="Quantity" aria-describedby="quantity-addon">
                        </div>
                        <div class="mb-3">
                            <input type="date" disabled="true" class="form-control" placeholder="Birthday" aria-label="Birthday" aria-describedby="birthday-addon">
                        </div>
                    </div>
    
                    <div>
                        <div class="mb-4 d-flex justify-content-center">
                            <img src="https://mdbootstrap.com/img/Photos/Others/placeholder.jpg"
                            alt="example placeholder" style="width: 300px;" />
                        </div>
                        <div class="d-flex justify-content-center">
                            <div class="btn btn-primary btn-rounded bg-gradient-dark">
                                <label class="form-label text-white m-1" for="customFile1">Choose image</label>
                                <input type="file" class="form-control d-none" id="customFile1" />
                            </div>
                        </div>
                    </div>
    
                    <div class="text-center d-flex justify-content-around">
                        <button type="button" class="btn bg-gradient-light w-25 my-4 mb-2" onclick="cacel_add_product()">Cancel</button>
                        <button type="button" class="btn bg-gradient-dark w-25 my-4 mb-2">Add</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

