<div id="form_add_product" class="w-100 bg-gray-100 opacity-25 position-absolute pt-4 pb-4 top-0 start-0 d-none">
    <div class="col-xl-4 col-lg-5 col-md-7 mx-auto w-50">
        <div class="card z-index-0">
            <div class="card-header text-center pt-4">
                <h5>Add Product</h5>
            </div>
            <div class="card-body">
                <form action="products/add-product" method="POST" role="form text-left" enctype="multipart/form-data">
                    <div class="mb-3">
                        <input name="productName" type="text" class="form-control" placeholder="Product name" aria-label="Product name" aria-describedby="productname-addon">
                    </div>
                    <div class="mb-3">
                        <input name="brand" type="text" class="form-control" placeholder="Brand" aria-label="Brand" aria-describedby="brand-addon">
                    </div>

                    <div class="mb-3 d-flex justify-content-between">
                        <select name="classify" id="" class="form-select pe-5" aria-label="Default select example">
                            <option selected>Classify</option>
                            <option value="Mobile">Mobile</option>
                            <option value="Tablet">Tablet</option>
                            <option value="Accessory">Accessory</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <input name="specifications" type="text" class="form-control" placeholder="Specifications" aria-label="Specifications" aria-describedby="specifications-addon">
                    </div>

                    <div class="mb-3 d-flex justify-content-between">
                        <select name="color" class="form-select w-30 pe-5" aria-label="Default select example">
                            <option selected>Select color</option>
                            <option value="white">white</option>
                            <option value="black">black</option>
                            <option value="gold">gold</option>
                            <option value="silver">silver</option>
                            <option value="gray">gray</option>
                            <option value="blue">blue</option>
                        </select>
                        <select name="memory" class="form-select w-30 pe-5" aria-label="Default select example">
                            <option selected>Select memory</option>
                            <option value="64">64GB</option>
                            <option value="128">128GB</option>
                            <option value="256">256GB</option>
                            <option value="512">512GB</option>
                            <option value="1024">1TB</option>
                        </select>
                    </div>

                    <div class="mb-3 d-flex justify-content-between">
                        <div class="mb-3 w-30">
                            <input name="quantity" type="number" class="form-control" placeholder="Quantity" aria-label="Quantity" aria-describedby="quantity-addon">
                        </div>
                        <div class="mb-3 w-30">
                            <input name="lastUpdated" type="date" class="form-control">
                        </div>
                    </div>

                    <div class="mb-3">
                        <input name="price" type="number" class="form-control" placeholder="Price (VNÄ)" aria-label="Price" aria-describedby="Price-addon">
                    </div>

                    <div>

                        <div class="d-flex justify-content-center">
                            <div class="btn btn-primary btn-rounded bg-gradient-dark">
                                <label class="form-label text-white m-1" for="customFile1">Choose image</label>
                                <input name="productImages" type="file" class="form-control" id="customFile1" multiple/>
                            </div>
                        </div>
                    </div>
    
                    <div class="text-center d-flex justify-content-around">
                        <button type="button" class="btn bg-gradient-light w-25 my-4 mb-2" onclick="cacel_add_product()">Cancel</button>
                        <button type="submit" class="btn bg-gradient-dark w-25 my-4 mb-2">Add</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

