<div id="form_add_user" class="w-100 bg-gray-100 opacity-25 position-absolute pt-4 pb-4 top-0 start-0 d-none">
    <div class="col-xl-4 col-lg-5 col-md-7 mx-auto w-50">
        <div class="card z-index-0">
            <div class="card-header text-center pt-4">
                <h5>Add User</h5>
            </div>
            <div class="card-body">
                <form action="/users/add-user" method="POST" role="form text-left">
                    <div class="mb-3">
                        <input name="employeeCode" id="employeeCode" type="text" class="form-control" placeholder="Employee code" aria-label="Employee code" aria-describedby="employeecode-addon">
                    </div>
                    <div class="mb-3">
                        <input name="fullname" id="fullname" type="text" class="form-control" placeholder="Full name" aria-label="Full name" aria-describedby="fullname-addon">
                    </div>
                    <div class="mb-3">
                        <input name="username" id="username" type="text" class="form-control" placeholder="User name" aria-label="User name" aria-describedby="username-addon">
                    </div>
                    <div class="mb-3">
                        <input name="phoneNumber" id="phoneNumber" type="text" class="form-control" placeholder="Phone number" aria-label="Phone number" aria-describedby="phonenumber-addon">
                    </div>
                    <div class="mb-3">
                        <input name="email" id="email" type="email" class="form-control" placeholder="Email" aria-label="Email" aria-describedby="email-addon">
                    </div>
                    <div class="mb-3">
                        <input name="password" id="password" type="password" class="form-control" placeholder="Password" aria-label="Password" aria-describedby="password-addon">
                    </div>
                    <div class="mb-3">
                        <input type="password" class="form-control" placeholder="Re enter password" aria-label="Re enter password" aria-describedby="reenterpassword-addon">
                    </div>
    
                    <div class="mb-3 d-flex justify-content-between">
                        <div class="mb-3">
                            <select name="gender" id="gender" class="form-select pe-5" aria-label="Default select example">
                                <option selected>Select gender</option>
                                <option value="1">Male</option>
                                <option value="2">Female</option>
                                <option value="3">Other</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <input name="birthday" id="birthday" type="date" class="form-control" placeholder="Birthday" aria-label="Birthday" aria-describedby="birthday-addon">
                        </div>
                    </div>
    
                    <div>
                        <div class="d-flex justify-content-center mb-4">
                            <img src="https://mdbootstrap.com/img/Photos/Others/placeholder-avatar.jpg"
                            class="rounded-circle" alt="example placeholder" style="width: 200px;" />
                        </div>
                        <div class="d-flex justify-content-center">
                            <div class="btn btn-primary btn-rounded bg-gradient-dark">
                                <label class="form-label text-white m-1" for="customFile2">Choose avatar</label>
                                <input type="file" class="form-control d-none" id="customFile2" />
                            </div>
                        </div>
                    </div>
    
    
                    <div class="form-check form-check-info text-left">
                        <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault" checked>
                        <label class="form-check-label" for="flexCheckDefault">
                            I agree the <a href="javascript:;" class="text-dark font-weight-bolder">Terms and Conditions</a>
                        </label>
                    </div>
                    <div class="text-center d-flex justify-content-around">
                        <button type="button" class="btn bg-gradient-light w-25 my-4 mb-2" onclick="cacel_add_user()">Cancel</button>
                        <button type="submit" value="ok" class="btn bg-gradient-dark w-25 my-4 mb-2">Add</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

